---
import { SITE_TITLE } from "../consts";
import SvgIcons from "./SvgIcons.astro";

const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
	<div class="social-links">
		<a href="https://bsky.app/profile/ladishdev.bsky.social" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Callums BlueSky</span>
			<svg viewBox="0 0 256 256" aria-hidden="true" width="32" height="32">
				<use href="#icon-bluesky"/>
			</svg>
		</a>
		<a href="https://github.com/LadishDev" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Callums GitHub</span>
			<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
				<use href="#icon-github-small"/>
			</svg>
		</a>
		<a href="https://www.linkedin.com/in/callum-ladish/" target="_blank" rel="noopener noreferrer">
			<span class="sr-only">Callums LinkedIn</span>
			<svg viewBox="0 0 512 512" aria-hidden="true" width="32" height="32">
				<use href="#icon-linkedin-large"/>
			</svg>
		</a>
	</div>
</footer>
<SvgIcons />
<style>
	footer {
		padding: 1rem 1rem 1rem 1rem;
		background: linear-gradient(#070707) no-repeat; /* linear-gradient(var(--gray-gradient)) no-repeat; */
		color: rgb(var(--white-text)); /* rgb(var(--gray)); */
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--white-text)); /* rgb(var(--gray)); */
	}
	.social-links a:hover {
		color: rgb(var(--white-text)); /* rgb(var(--gray-dark)); */
	}
</style>
