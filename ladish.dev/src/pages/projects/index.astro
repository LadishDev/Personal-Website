---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('projects')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="My Projects" description={SITE_DESCRIPTION} />
		<style>
			body {
				background: linear-gradient(135deg, #0f0517 0%, #1a0b2e 50%, #131320 100%);
				background-attachment: fixed;
				color: #ffffff;
				margin: 0;
				padding-top: 70px;
				font-family: "Atkinson", sans-serif;
				position: relative;
				overflow-x: hidden;
			}

			/* Background Orbs (matching homepage) */
			.bg-gradient-orb {
				position: fixed;
				border-radius: 50%;
				filter: blur(120px);
				opacity: 0.15;
				animation: mystical-float 20s ease-in-out infinite;
				z-index: -1;
				pointer-events: none;
			}

			.orb-1 {
				width: 400px;
				height: 400px;
				background: radial-gradient(circle, rgba(147, 51, 234, 0.8) 0%, transparent 70%);
				top: 15%;
				left: 10%;
				animation-delay: 0s;
			}

			.orb-2 {
				width: 350px;
				height: 350px;
				background: radial-gradient(circle, rgba(168, 85, 247, 0.6) 0%, transparent 70%);
				top: 50%;
				right: 15%;
				animation-delay: -8s;
			}

			.orb-3 {
				width: 300px;
				height: 300px;
				background: radial-gradient(circle, rgba(139, 92, 246, 0.7) 0%, transparent 70%);
				bottom: 20%;
				left: 20%;
				animation-delay: -15s;
			}

			.orb-4 {
				width: 320px;
				height: 320px;
				background: radial-gradient(circle, rgba(124, 58, 237, 0.7) 0%, transparent 70%);
				top: 25%;
				left: 50%;
				animation-delay: -5s;
			}

			.orb-5 {
				width: 280px;
				height: 280px;
				background: radial-gradient(circle, rgba(192, 132, 252, 0.6) 0%, transparent 70%);
				top: 70%;
				right: 40%;
				animation-delay: -12s;
			}

			@keyframes mystical-float {
				0%, 100% { 
					transform: translateY(0px) translateX(0px) scale(1) rotate(0deg);
					opacity: 0.15;
				}
				25% { 
					transform: translateY(-30px) translateX(25px) scale(1.1) rotate(90deg);
					opacity: 0.25;
				}
				50% { 
					transform: translateY(-50px) translateX(-15px) scale(0.9) rotate(180deg);
					opacity: 0.2;
				}
				75% { 
					transform: translateY(-35px) translateX(-30px) scale(1.05) rotate(270deg);
					opacity: 0.3;
				}
			}

			.page-header {
				text-align: center;
				padding: 4rem 2rem 2rem;
				position: relative;
			}

			.page-title {
				font-size: 2rem;
				font-weight: 900;
				margin: 0 0 1rem;
				background: linear-gradient(135deg, #a259f7 0%, #6a82fb 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.page-subtitle {
				font-size: 1.2rem;
				color: #b0b0b0;
				margin: 0 0 1rem;
				max-width: 600px;
				margin-left: auto;
				margin-right: auto;
			}

			.projects-count {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: rgba(162, 89, 247, 0.1);
				border: 1px solid rgba(162, 89, 247, 0.3);
				border-radius: 50px;
				padding: 0.5rem 1.2rem;
				font-size: 0.9rem;
				color: #a259f7;
				margin-top: 1rem;
			}

			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}

			.projects-grid {
				display: grid;
				gap: 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}

			.project-card {
				background: rgba(15, 15, 35, 0.6);
				backdrop-filter: blur(20px);
				border: 1px solid rgba(162, 89, 247, 0.2);
				border-radius: 20px;
				overflow: hidden;
				transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
				position: relative;
			}

			.project-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(162, 89, 247, 0.05) 0%, rgba(106, 130, 251, 0.02) 100%);
				opacity: 0;
				transition: opacity 0.3s ease;
			}

			.project-card:hover {
				transform: translateY(-10px);
				border-color: rgba(162, 89, 247, 0.4);
				box-shadow: 0 25px 50px rgba(162, 89, 247, 0.2);
			}

			/* Clear clickable indicator */
			.project-card::after {
				content: 'Click to view â†’';
				position: absolute;
				top: 1rem;
				right: 1rem;
				background: rgba(162, 89, 247, 0.15);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(162, 89, 247, 0.3);
				color: #a259f7;
				padding: 0.4rem 0.8rem;
				border-radius: 20px;
				font-size: 0.75rem;
				font-weight: 500;
				opacity: 0;
				transition: all 0.3s ease;
				z-index: 3;
				pointer-events: none;
			}

			.project-card:hover::after {
				opacity: 1;
				transform: translateY(-2px);
			}

			/* Add cursor pointer to indicate clickability */
			.project-card {
				cursor: pointer;
			}

			.project-card:hover::before {
				opacity: 1;
			}

			.project-link {
				display: block;
				text-decoration: none;
				color: inherit;
				height: 100%;
				cursor: pointer;
			}

			.project-link:hover {
				text-decoration: none;
			}

			.project-content {
				position: relative;
				z-index: 2;
			}

			/* Mobile layout - always image first, then content */
			.mobile-order {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				padding: 2rem;
			}

			/* Desktop layout - hidden on mobile */
			.desktop-order {
				display: none;
			}

			.project-image {
				width: 100%;
				height: 220px;
				object-fit: cover;
				border-radius: 16px;
				border: 2px solid rgba(162, 89, 247, 0.2);
				transition: all 0.3s ease;
				box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
			}

			.project-card:hover .project-image {
				border-color: rgba(162, 89, 247, 0.5);
				box-shadow: 0 15px 35px rgba(162, 89, 247, 0.2);
				transform: scale(1.02);
			}

			.project-info {
				display: flex;
				flex-direction: column;
				justify-content: space-between;
			}

			.project-header {
				margin-bottom: 1rem;
			}

			.project-title {
				font-size: 1.8rem;
				font-weight: 900;
				margin: 0 0 0.5rem;
				color: #ffffff;
				transition: color 0.3s ease;
			}

			.project-card:hover .project-title {
				color: #a259f7;
			}

			.project-year {
				font-size: 0.9rem;
				color: #8b8b8b;
				margin: 0;
			}

			.project-description {
				color: #d0d0d0;
				line-height: 1.6;
				margin: 1rem 0 1.5rem;
				font-size: 0.95rem;
			}

			.project-highlights {
				margin: 1rem 0 1.5rem;
			}

			.highlight-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.highlight-item {
				display: flex;
				align-items: flex-start;
				gap: 0.5rem;
				margin-bottom: 0.5rem;
				font-size: 0.9rem;
				color: #c0c0c0;
				line-height: 1.4;
			}

			.highlight-icon {
				color: #a259f7;
				font-size: 0.8rem;
				margin-top: 0.1rem;
				flex-shrink: 0;
			}

			.project-content {
				position: relative;
			}



			.project-tech {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin-top: 1rem;
			}

			.tech-tag {
				background: rgba(162, 89, 247, 0.1);
				border: 1px solid rgba(162, 89, 247, 0.2);
				color: #a259f7;
				padding: 0.3rem 0.8rem;
				border-radius: 20px;
				font-size: 0.8rem;
				font-weight: 500;
				transition: all 0.3s ease;
			}

			.project-card:hover .tech-tag {
				background: rgba(162, 89, 247, 0.2);
				border-color: rgba(162, 89, 247, 0.4);
			}

			/* Mobile-first Responsive Design */
			
			/* Base mobile styles are already defined above */
			
			/* Mobile (up to 480px) - already handled in base styles */
			@media (max-width: 480px) {
				main {
					padding: 1rem;
				}
				
				.page-header {
					padding: 2rem 1rem 1rem;
				}
				
				.page-title {
					font-size: 2rem;
				}

				.project-content,
				.project-card.reverse .project-content {
					grid-template-columns: 1fr;
					gap: 1rem;
					padding: 1.5rem;
				}

				.project-image {
					height: 180px;
				}

				/* Mobile clickable indicator */
				.project-card::after {
					position: static;
					display: block;
					text-align: center;
					margin-top: 1rem;
					opacity: 0.7;
					background: rgba(162, 89, 247, 0.1);
				}
			}

			/* Tablet (481px to 768px) */
			@media (min-width: 481px) and (max-width: 768px) {
				.page-title {
					font-size: 2.5rem;
				}
				
				.project-content,
				.project-card.reverse .project-content {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					padding: 2rem;
				}

				.project-image {
					height: 200px;
				}
			}

			/* Desktop (769px and up) */
			@media (min-width: 769px) {
				.page-title {
					font-size: 4rem;
				}

				.page-header {
					padding: 4rem 2rem 2rem;
				}

				main {
					padding: 2rem;
				}

				.projects-grid {
					grid-template-columns: 1fr;
				}

				/* Hide mobile layout, show desktop layout */
				.mobile-order {
					display: none;
				}

				.desktop-order {
					display: grid;
					grid-template-columns: 350px 1fr;
					gap: 2.5rem;
					padding: 2.5rem;
					align-items: center;
				}

				.project-card.reverse .desktop-order {
					grid-template-columns: 1fr 350px;
				}

				.project-image {
					height: 220px;
				}
			}
		</style>
	</head>
	<body>
		<!-- Animated Background Orbs (matching homepage) -->
		<div class="bg-gradient-orb orb-1"></div>
		<div class="bg-gradient-orb orb-2"></div>
		<div class="bg-gradient-orb orb-3"></div>
		<div class="bg-gradient-orb orb-4"></div>
		<div class="bg-gradient-orb orb-5"></div>
		
		<Header />
		
		<div class="page-header">
			<h1 class="page-title">My Projects</h1>
			<p class="page-subtitle">
				A showcase of my technical journey - from cybersecurity solutions to innovative web applications
			</p>
			<div class="projects-count">
				ðŸ“‚ {posts.length} Projects
			</div>
		</div>

		<main>
			<ul class="projects-grid">
				{
					posts.map((post, index) => {
						const isReverse = index % 2 === 1;
						const imageContent = post.data.heroImage && (
							<div class="project-image-container">
								<Image 
									width={350} 
									height={220} 
									src={post.data.heroImage} 
									alt={post.data.title}
									class="project-image"
								/>
							</div>
						);
						
						// Use project data from MDX frontmatter
						const details = {
							highlights: post.data.highlights || ["ï¿½ Innovative project showcasing modern development practices"],
							tech: post.data.tech || ["Technology"],
							status: post.data.status || "Project"
						};

						const infoContentWithoutButton = (
							<div class="project-info">
								<div class="project-header">
									<h3 class="project-title">{post.data.title}</h3>
									<p class="project-year">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
								
								<div class="project-description">
									{post.data.description || "An innovative project showcasing modern development practices and technical expertise."}
								</div>

								<div class="project-highlights">
									<ul class="highlight-list">
										{details.highlights.map((highlight) => (
											<li class="highlight-item">
												<span class="highlight-icon">â€¢</span>
												<span>{highlight}</span>
											</li>
										))}
									</ul>
								</div>
								
								<div class="project-tech">
									{details.tech.map((tech) => (
										<span class="tech-tag">{tech}</span>
									))}
								</div>
							</div>
						);

						return (
							<li class={`project-card ${isReverse ? 'reverse' : ''}`}>
								<a href={`/projects/${post.id}/`} class="project-link">
									<div class="project-content">
										<div class="mobile-order">
											{imageContent}
											{infoContentWithoutButton}
										</div>
										<div class="desktop-order">
											{isReverse ? [infoContentWithoutButton, imageContent] : [imageContent, infoContentWithoutButton]}
										</div>
									</div>
								</a>
							</li>
						);
					})
				}
			</ul>
		</main>
		
		<Footer />
	</body>
</html>
