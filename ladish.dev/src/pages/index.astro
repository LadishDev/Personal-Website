              t=new Date(),
              a=t.getFullYear()-b.getFullYear(),
              m=t.getMonth()-b.getMonth();
          if(m<0||(m===0&&t.getDate()<b.getDate()))a--;
          var e=document.getElementById("myAgeResult");
          if(e)e.textContent=String(a);
          var e2=document.getElementById("myAgeResult2");
