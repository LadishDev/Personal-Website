const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <!-- Animated Background -->
    <div class="bg-particle"></div>
    <div class="bg-particle"></div>
    <div class="bg-particle"></div>
    <div class="bg-particle"></div>
    <div class="bg-particle"></div>
    <div class="bg-gradient-orb"></div>
    <div class="bg-gradient-orb"></div>
    <div class="bg-gradient-orb"></div>
    
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>